CREATE DATABASE MalkovaTiT;
--Object Explorer on vaja pidevalt uuendada k√§sitsi!
USE MalkovaTiT;

--tabeli loomine

CREATE TABLE opilane(
opilaneID int Primary Key identity(1,1),
eesnimi varchar(25),
perenimi varchar(30) Unique,
synniaeg date,
aadress TEXT,
opilaskodu bit
);

SELECT * FROM opilane;
--tabeli kustutamine
DROP table opilane;

--andmete lisamine tabelisse

